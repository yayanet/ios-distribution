<ul class="package-list">

<% if request.params['path'] %>
  <li class="directory"><a href="/">/</a></li>
<% end %>

<% @files.each do |f| %>
  <% path = relative_path f %>
  <% name = File.basename f %>
  <% if File.directory?(f) %>
  <li class="directory">
    <a href="/packages/<%= path %>"><%= name %>/</a>
  </li>
  <% end %>
<% end %>

<% @ipas.each do |f| %>
  <% path = relative_path f %>
  <% name = File.basename f %>
  <% plist = request.original_url + '/' + name + '.plist' %>
  <li>
    <a href="itms-services://?action=download-manifest&url=<%=u plist %>"><%= name %></a>
  </li>
<% end %>

</ul>
