<ul>

<% @files.each do |f| %>
  <% path = relative_path f %>
  <% name = File.basename f %>
  <% if File.directory?(f) %>
  <li>
    <a href="/packages/<%= path %>"><%= name %></a>
  </li>
  <% end %>
<% end %>

<% @ipas.each do |f| %>
  <% path = relative_path f %>
  <% name = File.basename f %>
  <% plist = request.original_url + '/' + path + '.plist' %>
  <li>
    <a href="itms-services://?action=download-manifest&url=<%=u plist %>"><%= name %></a>
  </li>
<% end %>

</ul>
